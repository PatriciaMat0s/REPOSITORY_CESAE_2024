<!--04 LINEAR LAYOUT /// EXERCICIO 3-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


<TextView
    android:id="@+id/text_conversor"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Conversor de moeda, yay"
    android:gravity="center"
    android:textSize="30sp" />

<EditText
    android:id="@+id/edit_valor_euros"
    android:hint="Insira o valor em Euros"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

    <Button
        android:id="@+id/button_real"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Real"
        />

    <Button
        android:id="@+id/button_dolar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5sp"
        android:text="Dolar"
        />

    <Button
        android:id="@+id/button_peso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Peso"
        />

    </LinearLayout>

    <TextView
        android:id="@+id/text_resultado"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textSize="30sp"
        android:text="*****"
    />

    <TextView
        android:id="@+id/text_by"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textSize="15sp"
        android:text="Desenvolvido by Patos"
        />

</LinearLayout>